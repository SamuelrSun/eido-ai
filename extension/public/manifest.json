{
  "manifest_version": 3,
  "name": "Eido",
  "version": "1.1.0",
  "description": "Eido AI Chrome Extension",
  "permissions": [
    "storage",
    "scripting",
    "cookies"
  ],
  "host_permissions": [
    "https://dashboard.eido-ai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "type": "module" 
    }
]
}