  return (
    <Dialog open={isOpen} onOpenChange={handleOpenChange}>
      <DialogContent className="sm:max-w-[425px] bg-neutral-900 border-neutral-800">
        <form onSubmit={handleSubmit}>
          <DialogHeader className="text-center sm:text-center">
