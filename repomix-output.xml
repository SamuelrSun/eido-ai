  isLoading: boolean;
}

export const JoinClassDialog: React.FC<JoinClassDialogProps> = ({ isOpen, onClose, onSubmit, isLoading }) => {
  const [inviteCode, setInviteCode] = useState('');

  const handleSubmit = (e: React.FormEvent) => {
    e.preventDefault();
    if (inviteCode.trim()) {
      onSubmit(inviteCode.trim());
